pipeline {
  agent {
    docker {image 'node:16-alpine'}
  }
  stages {
    stage('build') {
      steps {
        sh'node version'
      }
    }
    stage('Deploy') {
      steps {
        sh'scp -o striktHostkeychecking=NO target/node:16-alpine ec2-user@43.205.140.18'
      }
    }
    stage('test') {
      steps {
        sh'node --version'
      }
    }
  }
}
